{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ESNext"],
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "out"
  },
  "exclude": [
    "node_modules"
  ]
}
